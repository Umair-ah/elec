<p style="color: green"><%= notice %></p>
<div class="d-flex justify-content-between align-items-center">
  <%= link_to "Generate bill", new_admin_bill_path, class:"btn btn-primary mt-5" %>
  <%= button_to "Sign Out", destroy_admin_session_path, method: :delete, class:"btn btn-danger mt-5" %>
</div>
<h1 class="mt-5">Bills</h1>

<div id="admin_bills">
  <% @admin_bills.each do |admin_bill| %>
    <%= render admin_bill %>
  <% end %>
</div>

